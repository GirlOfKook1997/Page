<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServiceActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_weight="1"
        >
        <ImageButton
            android:id="@+id/btn_party1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/party1"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_weight="1"
        >
        <ImageButton
            android:id="@+id/btn_party2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/party2"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_weight="1"
        >
        <ImageButton
            android:id="@+id/btn_party3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/party3"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_weight="1"
        >
        <ImageButton
            android:id="@+id/btn_party4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/party4"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>